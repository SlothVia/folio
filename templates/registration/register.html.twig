{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% extends 'header.html.twig' %}

{% block title %}Création Compte Utilisateur{% endblock %}

{% block body %}
    <h1>Création de votre compte</h1>
<div>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.Accepter_les_conditions) }}

        <button class="btn">S'enregistrer</button>
    {{ form_end(registrationForm) }}
    <a href="{{ path('accueil') }}" class="btn">Accueil</a>
</div>
{% endblock %}
